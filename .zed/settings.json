{
    "project_name": "dictype",
    "auto_install_extensions": {
        "neocmake": true,
        "clangd": true
    },
    "lsp": {
        "clangd": {
            "binary": {
                "ignore_system_version": false,
                "arguments": [
                    "-background-index",
                    "-compile-commands-dir=cmake-build-debug"
                ]
            }
        }
    },
    "languages": {
        "C++": {
            "format_on_save": "on",
            "tab_size": 4
        },
        "Rust": {
            "format_on_save": "on",
            "tab_size": 4
        }
    }
}
