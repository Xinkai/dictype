{
    "project_name": "dictype",
    "lsp": {
        "clangd": {
            "binary": {
                "ignore_system_version": false,
                "arguments": [
                    "-background-index",
                    "-compile-commands-dir=cmake-build-debug-llvm",
                ],
            },
        },
        "rust-analyzer": {
            "binary": {
                "ignore_system_version": false,
            },
        },
    },
    "languages": {
        "C++": {
            "format_on_save": "on",
            "tab_size": 4,
        },
        "Rust": {
            "format_on_save": "on",
            "tab_size": 4,
        },
    },
}
